<%- include('../partials/header', { currentPage: 'schools' }) %>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/schools">Schools</a></li>
        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>"><%= school.name %></a></li>
        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>/students">Students</a></li>
        <li class="breadcrumb-item active"><%= isEdit ? 'Edit Student' : 'New Student' %></li>
    </ol>
</nav>

<div class="row justify-content-center">
    <div class="col-lg-10">
        <div class="card">
            <div class="card-header">
                <i class="bi bi-person me-2"></i>
                <%= isEdit ? 'Edit Student' : 'Add New Student' %>
            </div>
            <div class="card-body">
                <% if (typeof error !== 'undefined' && error) { %>
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-circle me-2"></i><%= error %>
                    </div>
                <% } %>
                
                <form method="POST" action="<%= isEdit ? '/admin/schools/' + school._id + '/students/' + student._id : '/admin/schools/' + school._id + '/students' %>">
                    <h6 class="border-bottom pb-2 mb-3">Student Information</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="name" class="form-label">Full Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" 
                                   value="<%= student ? student.name : '' %>" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label">Phone Number <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" id="phone" name="phone" 
                                   value="<%= student ? student.phone : '' %>" required>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" 
                                   value="<%= student ? student.email : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="date_of_birth" class="form-label">Date of Birth</label>
                            <input type="date" class="form-control" id="date_of_birth" name="date_of_birth" 
                                   value="<%= student && student.date_of_birth ? new Date(student.date_of_birth).toISOString().split('T')[0] : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="class_id" class="form-label">Class</label>
                            <select class="form-select" id="class_id" name="class_id">
                                <option value="">-- Select Class --</option>
                                <% classes.forEach(cls => { %>
                                    <option value="<%= cls._id %>" 
                                        <%= (student && student.studentProfile && student.studentProfile.class_id && student.studentProfile.class_id._id && student.studentProfile.class_id._id.toString() === cls._id.toString()) ? 'selected' : '' %>>
                                        Class <%= cls.class_name %>-<%= cls.section %>
                                    </option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="roll_number" class="form-label">Roll Number</label>
                            <input type="text" class="form-control" id="roll_number" name="roll_number" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.roll_number : '' %>">
                        </div>
                    </div>
                    
                    <h6 class="border-bottom pb-2 mb-3 mt-4">Parent/Guardian Information</h6>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="father_name" class="form-label">Father's Name</label>
                            <input type="text" class="form-control" id="father_name" name="father_name" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.father_name : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="father_number" class="form-label">Father's Phone</label>
                            <input type="number" class="form-control" id="father_number" name="father_number" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.father_number : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="father_email" class="form-label">Father's Email</label>
                            <input type="email" class="form-control" id="father_email" name="father_email" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.father_email : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="mother_name" class="form-label">Mother's Name</label>
                            <input type="text" class="form-control" id="mother_name" name="mother_name" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.mother_name : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="mother_number" class="form-label">Mother's Phone</label>
                            <input type="number" class="form-control" id="mother_number" name="mother_number" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.mother_number : '' %>">
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label for="mother_email" class="form-label">Mother's Email</label>
                            <input type="email" class="form-control" id="mother_email" name="mother_email" 
                                   value="<%= student && student.studentProfile ? student.studentProfile.mother_email : '' %>">
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>
                            <%= isEdit ? 'Update Student' : 'Add Student' %>
                        </button>
                        <a href="/admin/schools/<%= school._id %>/students" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
