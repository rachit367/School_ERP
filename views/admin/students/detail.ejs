<%- include('../partials/header') %>

    <div class="main-content">
        <%- include('../partials/topbar', { pageTitle: student.name }) %>

            <div class="content-wrapper">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools">Schools</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>">
                                <%= school.name %>
                            </a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>/students">Students</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <%= student.name %>
                        </li>
                    </ol>
                </nav>

                <!-- Success/Error Messages -->
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>

                        <!-- Student Header -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-lg-8">
                                        <div class="d-flex align-items-start">
                                            <div class="avatar-lg bg-success bg-opacity-10 text-success rounded-circle me-4 d-flex align-items-center justify-content-center"
                                                style="width: 80px; height: 80px; font-size: 2.5rem; font-weight: 700;">
                                                <%= student.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <h2 class="mb-2">
                                                    <%= student.name %>
                                                </h2>
                                                <p class="mb-1">
                                                    <i class="bi bi-phone me-2"></i>
                                                    <%= student.phone %>
                                                        <% if (student.email) { %>
                                                            <span class="ms-3"><i class="bi bi-envelope me-2"></i>
                                                                <%= student.email %>
                                                            </span>
                                                            <% } %>
                                                </p>
                                                <p class="mb-0">
                                                    <% if (student.studentProfile && student.studentProfile.class_id) {
                                                        %>
                                                        <span class="badge bg-primary fs-6">
                                                            Class <%= student.studentProfile.class_id.class_name %>-<%=
                                                                    student.studentProfile.class_id.section %>
                                                        </span>
                                                        <% } %>
                                                            <% if (student.studentProfile &&
                                                                student.studentProfile.roll_number) { %>
                                                                <span class="badge bg-secondary fs-6 ms-2">Roll: <%=
                                                                        student.studentProfile.roll_number %></span>
                                                                <% } %>
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                                        <a href="/admin/schools/<%= school._id %>/students/<%= student._id %>/edit"
                                            class="btn btn-warning me-2">
                                            <i class="bi bi-pencil me-2"></i>Edit Student
                                        </a>
                                        <form
                                            action="/admin/schools/<%= school._id %>/students/<%= student._id %>/delete"
                                            method="POST" class="d-inline"
                                            onsubmit="return confirm('Are you sure you want to delete this student?')">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row g-4 mb-4">
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card success">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-calendar-check"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= stats.attendancePercentage %>%
                                                </h4>
                                                <p class="text-muted mb-0">Attendance (30 days)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card info">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-award"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= stats.totalExams %>
                                                </h4>
                                                <p class="text-muted mb-0">Exams Taken</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card warning">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-calendar-x"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= stats.pendingLeaves %>
                                                </h4>
                                                <p class="text-muted mb-0">Pending Leaves</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-journal-check"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= homework ? homework.filter(h=> h.submitted).length : 0 %>/<%=
                                                            homework ? homework.length : 0 %>
                                                </h4>
                                                <p class="text-muted mb-0">Homework Submitted</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Student Profile & Parent Info -->
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <i class="bi bi-person me-2"></i>Student Information
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex justify-content-between">
                                                <span class="text-muted">Date of Birth</span>
                                                <strong>
                                                    <%= student.date_of_birth ? new
                                                        Date(student.date_of_birth).toLocaleDateString() : 'N/A' %>
                                                </strong>
                                            </li>
                                            <% if (student.studentProfile) { %>
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span class="text-muted">Father's Name</span>
                                                    <strong>
                                                        <%= student.studentProfile.father_name || 'N/A' %>
                                                    </strong>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span class="text-muted">Father's Phone</span>
                                                    <strong>
                                                        <%= student.studentProfile.father_number || 'N/A' %>
                                                    </strong>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span class="text-muted">Mother's Name</span>
                                                    <strong>
                                                        <%= student.studentProfile.mother_name || 'N/A' %>
                                                    </strong>
                                                </li>
                                                <li class="list-group-item d-flex justify-content-between">
                                                    <span class="text-muted">Mother's Phone</span>
                                                    <strong>
                                                        <%= student.studentProfile.mother_number || 'N/A' %>
                                                    </strong>
                                                </li>
                                                <% if (student.studentProfile.guardian_name) { %>
                                                    <li class="list-group-item d-flex justify-content-between">
                                                        <span class="text-muted">Guardian</span>
                                                        <strong>
                                                            <%= student.studentProfile.guardian_name %>
                                                        </strong>
                                                    </li>
                                                    <% } %>
                                                        <% } %>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Attendance Summary -->
                            <div class="col-lg-8 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <i class="bi bi-calendar me-2"></i>Attendance (Last 30 Days)
                                    </div>
                                    <div class="card-body">
                                        <div class="row mb-3">
                                            <div class="col-4 text-center">
                                                <h3 class="text-success mb-0">
                                                    <%= attendanceStats.present %>
                                                </h3>
                                                <small class="text-muted">Present</small>
                                            </div>
                                            <div class="col-4 text-center">
                                                <h3 class="text-danger mb-0">
                                                    <%= attendanceStats.absent %>
                                                </h3>
                                                <small class="text-muted">Absent</small>
                                            </div>
                                            <div class="col-4 text-center">
                                                <h3 class="text-warning mb-0">
                                                    <%= attendanceStats.leave %>
                                                </h3>
                                                <small class="text-muted">Leave</small>
                                            </div>
                                        </div>
                                        <% if (attendance && attendance.length> 0) { %>
                                            <div class="table-responsive" style="max-height: 200px; overflow-y: auto;">
                                                <table class="table table-sm table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Date</th>
                                                            <th>Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% attendance.slice(0, 10).forEach(att=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= new Date(att.date).toLocaleDateString() %>
                                                                </td>
                                                                <td>
                                                                    <% if (att.status==='P' ) { %>
                                                                        <span class="badge bg-success">Present</span>
                                                                        <% } else if (att.status==='A' ) { %>
                                                                            <span class="badge bg-danger">Absent</span>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="badge bg-warning">Leave</span>
                                                                                <% } %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted">
                                                    <p class="mb-0">No attendance records in the last 30 days</p>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Marks -->
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <i class="bi bi-award me-2"></i>Recent Marks
                                    </div>
                                    <div class="card-body">
                                        <% if (marks && marks.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Exam</th>
                                                            <th>Subject</th>
                                                            <th>Marks</th>
                                                            <th>Grade</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% marks.forEach(mark=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= mark.exam_id ? mark.exam_id.name : 'N/A' %>
                                                                </td>
                                                                <td>
                                                                    <%= mark.exam_id ? mark.exam_id.subject : 'N/A' %>
                                                                </td>
                                                                <td>
                                                                    <%= mark.marks_obtained %>/<%= mark.exam_id ?
                                                                            mark.exam_id.total_marks : '?' %>
                                                                </td>
                                                                <td><span class="badge bg-primary">
                                                                        <%= mark.grade || 'N/A' %>
                                                                    </span></td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted py-4">
                                                    <i class="bi bi-award" style="font-size: 2rem;"></i>
                                                    <p class="mb-0 mt-2">No marks records found</p>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>

                            <!-- Leave Applications -->
                            <div class="col-lg-6 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <i class="bi bi-calendar-x me-2"></i>Leave Applications (Last 30 Days)
                                    </div>
                                    <div class="card-body">
                                        <% if (leaves && leaves.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Date Range</th>
                                                            <th>Reason</th>
                                                            <th>Status</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% leaves.forEach(leave=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= new Date(leave.start_date).toLocaleDateString()
                                                                        %>
                                                                        <% if (leave.end_date && leave.end_date
                                                                            !==leave.start_date) { %>
                                                                            - <%= new
                                                                                Date(leave.end_date).toLocaleDateString()
                                                                                %>
                                                                                <% } %>
                                                                </td>
                                                                <td>
                                                                    <%= leave.reason || 'N/A' %>
                                                                </td>
                                                                <td>
                                                                    <% if (leave.status==='Approved' ) { %>
                                                                        <span class="badge bg-success">Approved</span>
                                                                        <% } else if (leave.status==='Rejected' ) { %>
                                                                            <span
                                                                                class="badge bg-danger">Rejected</span>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="badge bg-warning">Pending</span>
                                                                                <% } %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted py-4">
                                                    <i class="bi bi-calendar-check" style="font-size: 2rem;"></i>
                                                    <p class="mb-0 mt-2">No leave applications in the last 30 days</p>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Homework Status -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="bi bi-journal-text me-2"></i>Homework Status (Last 30 Days)
                            </div>
                            <div class="card-body">
                                <% if (homework && homework.length> 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Topic</th>
                                                    <th>Deadline</th>
                                                    <th>Status</th>
                                                    <th>Submitted At</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% homework.forEach(hw=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= hw.topic || 'Untitled' %>
                                                        </td>
                                                        <td>
                                                            <%= hw.deadline ? new Date(hw.deadline).toLocaleDateString()
                                                                : 'No deadline' %>
                                                        </td>
                                                        <td>
                                                            <% if (hw.submitted) { %>
                                                                <span class="badge bg-success"><i
                                                                        class="bi bi-check me-1"></i>Submitted</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-warning"><i
                                                                            class="bi bi-clock me-1"></i>Pending</span>
                                                                    <% } %>
                                                        </td>
                                                        <td>
                                                            <%= hw.submittedAt ? new
                                                                Date(hw.submittedAt).toLocaleDateString() : '-' %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="text-center text-muted py-4">
                                            <i class="bi bi-journal" style="font-size: 2rem;"></i>
                                            <p class="mb-0 mt-2">No homework assigned in the last 30 days</p>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
            </div>
    </div>

    <%- include('../partials/footer') %>