<%- include('partials/header', { currentPage: 'error' }) %>

<div class="text-center py-5">
    <i class="bi bi-exclamation-triangle text-danger" style="font-size: 5rem;"></i>
    <h2 class="mt-4">Something went wrong</h2>
    <p class="text-muted lead"><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %></p>
    
    <div class="mt-4">
        <a href="/admin/dashboard" class="btn btn-primary">
            <i class="bi bi-house me-1"></i>Go to Dashboard
        </a>
        <button onclick="history.back()" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Go Back
        </button>
    </div>
</div>

<%- include('partials/footer') %>
