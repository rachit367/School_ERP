<%- include('../partials/header') %>

    <div class="main-content">
        <%- include('../partials/topbar', { pageTitle: 'Staff - ' + school.name }) %>

            <div class="content-wrapper">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools">Schools</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>">
                                <%= school.name %>
                            </a></li>
                        <li class="breadcrumb-item active">Staff</li>
                    </ol>
                </nav>

                <!-- Success/Error Messages -->
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                        <% if (typeof error !=='undefined' && error) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            <% } %>

                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <h2 class="mb-1"><i class="bi bi-people-fill me-2 text-primary"></i>School Staff
                                        </h2>
                                        <p class="text-muted mb-0">
                                            <%= school.name %> - Manage Principal, Coordinators & Managers
                                        </p>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <a href="/admin/schools/<%= school._id %>/staff/coordinator/new"
                                            class="btn btn-info">
                                            <i class="bi bi-plus-circle me-2"></i>Add Coordinator
                                        </a>
                                        <a href="/admin/schools/<%= school._id %>/staff/manager/new"
                                            class="btn btn-warning">
                                            <i class="bi bi-plus-circle me-2"></i>Add Manager
                                        </a>
                                    </div>
                                </div>

                                <!-- Principal Section -->
                                <div class="card mb-4">
                                    <div class="card-header bg-primary text-white">
                                        <i class="bi bi-person-badge me-2"></i>Principal
                                    </div>
                                    <div class="card-body">
                                        <% if (principal) { %>
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-lg bg-primary bg-opacity-10 text-primary rounded-circle me-3 d-flex align-items-center justify-content-center"
                                                        style="width: 60px; height: 60px; font-size: 1.5rem; font-weight: 700;">
                                                        <%= principal.name.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <div>
                                                        <h5 class="mb-1">
                                                            <%= principal.name %>
                                                        </h5>
                                                        <p class="text-muted mb-0">
                                                            <i class="bi bi-phone me-1"></i>
                                                            <%= principal.phone %>
                                                                <% if (principal.email) { %>
                                                                    <span class="ms-3"><i
                                                                            class="bi bi-envelope me-1"></i>
                                                                        <%= principal.email %>
                                                                    </span>
                                                                    <% } %>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div>
                                                    <a href="/admin/schools/<%= school._id %>/principal/<%= principal._id %>/edit"
                                                        class="btn btn-outline-warning btn-sm">
                                                        <i class="bi bi-pencil me-1"></i>Edit
                                                    </a>
                                                </div>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted py-3">
                                                    <i class="bi bi-person-x" style="font-size: 2rem;"></i>
                                                    <p class="mb-2">No Principal Assigned</p>
                                                    <a href="/admin/schools/<%= school._id %>/principal/new"
                                                        class="btn btn-success btn-sm">
                                                        <i class="bi bi-plus-circle me-1"></i>Add Principal
                                                    </a>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>

                                <!-- Coordinators Section -->
                                <div class="card mb-4">
                                    <div class="card-header bg-info text-white">
                                        <i class="bi bi-person-workspace me-2"></i>Coordinators (<%= coordinators ?
                                            coordinators.length : 0 %>)
                                    </div>
                                    <div class="card-body">
                                        <% if (coordinators && coordinators.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover align-middle">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Name</th>
                                                            <th>Phone</th>
                                                            <th>Email</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% coordinators.forEach((coord, index)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td><strong>
                                                                        <%= coord.name %>
                                                                    </strong></td>
                                                                <td>
                                                                    <%= coord.phone %>
                                                                </td>
                                                                <td>
                                                                    <%= coord.email || '-' %>
                                                                </td>
                                                                <td class="action-buttons">
                                                                    <a href="/admin/schools/<%= school._id %>/staff/coordinator/<%= coord._id %>/edit"
                                                                        class="btn btn-outline-warning btn-sm"
                                                                        title="Edit">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </a>
                                                                    <form
                                                                        action="/admin/schools/<%= school._id %>/staff/coordinator/<%= coord._id %>/delete"
                                                                        method="POST" class="d-inline"
                                                                        onsubmit="return confirm('Are you sure you want to remove <%= coord.name %>?')">
                                                                        <button type="submit"
                                                                            class="btn btn-outline-danger btn-sm"
                                                                            title="Delete">
                                                                            <i class="bi bi-trash"></i>
                                                                        </button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted py-3">
                                                    <i class="bi bi-person-x" style="font-size: 2rem;"></i>
                                                    <p class="mb-2">No Coordinators Added</p>
                                                    <a href="/admin/schools/<%= school._id %>/staff/coordinator/new"
                                                        class="btn btn-info btn-sm">
                                                        <i class="bi bi-plus-circle me-1"></i>Add Coordinator
                                                    </a>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>

                                <!-- Managers Section -->
                                <div class="card mb-4">
                                    <div class="card-header bg-warning text-dark">
                                        <i class="bi bi-briefcase me-2"></i>Managers (<%= managers ? managers.length : 0
                                            %>)
                                    </div>
                                    <div class="card-body">
                                        <% if (managers && managers.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover align-middle">
                                                    <thead>
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Name</th>
                                                            <th>Phone</th>
                                                            <th>Email</th>
                                                            <th>Actions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% managers.forEach((mgr, index)=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= index + 1 %>
                                                                </td>
                                                                <td><strong>
                                                                        <%= mgr.name %>
                                                                    </strong></td>
                                                                <td>
                                                                    <%= mgr.phone %>
                                                                </td>
                                                                <td>
                                                                    <%= mgr.email || '-' %>
                                                                </td>
                                                                <td class="action-buttons">
                                                                    <a href="/admin/schools/<%= school._id %>/staff/manager/<%= mgr._id %>/edit"
                                                                        class="btn btn-outline-warning btn-sm"
                                                                        title="Edit">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </a>
                                                                    <form
                                                                        action="/admin/schools/<%= school._id %>/staff/manager/<%= mgr._id %>/delete"
                                                                        method="POST" class="d-inline"
                                                                        onsubmit="return confirm('Are you sure you want to remove <%= mgr.name %>?')">
                                                                        <button type="submit"
                                                                            class="btn btn-outline-danger btn-sm"
                                                                            title="Delete">
                                                                            <i class="bi bi-trash"></i>
                                                                        </button>
                                                                    </form>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted py-3">
                                                    <i class="bi bi-person-x" style="font-size: 2rem;"></i>
                                                    <p class="mb-2">No Managers Added</p>
                                                    <a href="/admin/schools/<%= school._id %>/staff/manager/new"
                                                        class="btn btn-warning btn-sm">
                                                        <i class="bi bi-plus-circle me-1"></i>Add Manager
                                                    </a>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
            </div>
    </div>

    <%- include('../partials/footer') %>