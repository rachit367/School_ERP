<%- include('partials/header') %>

    <div class="main-content">
        <%- include('partials/topbar', { pageTitle: 'Dashboard' }) %>

            <div class="content-wrapper">
                <!-- Welcome Section -->
                <div class="welcome-section">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <h1 class="welcome-title">Welcome back, <%= admin.username %>
                            </h1>
                            <p class="welcome-subtitle">Here's an overview of your schools and users.</p>
                        </div>
                        <div class="col-lg-4 text-lg-end">
                            <span class="badge px-3 py-2">
                                <i class="bi bi-calendar3 me-1"></i>
                                <%= new Date().toLocaleDateString('en-US', { weekday: 'long' , month: 'short' ,
                                    day: 'numeric' }) %>
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Stats Cards -->
                <div class="row g-3 mb-4">
                    <div class="col-xl-3 col-md-6">
                        <a href="/admin/schools" class="stat-card-link">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="stat-icon bg-primary-light text-primary">
                                            <i class="bi bi-building"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="stat-value">
                                                <%= stats.totalSchools %>
                                            </div>
                                            <div class="stat-label">Schools</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <a href="/admin/students" class="stat-card-link">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="stat-icon bg-success-light text-success">
                                            <i class="bi bi-people"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="stat-value">
                                                <%= stats.totalStudents %>
                                            </div>
                                            <div class="stat-label">Students</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <a href="/admin/teachers" class="stat-card-link">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="stat-icon bg-info-light text-info">
                                            <i class="bi bi-person-badge"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="stat-value">
                                                <%= stats.totalTeachers %>
                                            </div>
                                            <div class="stat-label">Teachers</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>

                    <div class="col-xl-3 col-md-6">
                        <a href="/admin/schools" class="stat-card-link">
                            <div class="card stat-card">
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <div class="stat-icon bg-warning-light text-warning">
                                            <i class="bi bi-journal-bookmark"></i>
                                        </div>
                                        <div class="ms-3">
                                            <div class="stat-value">
                                                <%= stats.totalClasses %>
                                            </div>
                                            <div class="stat-label">Classes</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Schools List -->
                <div class="card">
                    <div class="card-header">
                        <span><i class="bi bi-building me-2"></i>Schools</span>
                        <a href="/admin/schools/new" class="btn btn-primary btn-sm">
                            <i class="bi bi-plus"></i>
                            Add School
                        </a>
                    </div>
                    <div class="card-body p-0">
                        <% if (schools && schools.length> 0) { %>
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>School</th>
                                            <th>Students</th>
                                            <th>Teachers</th>
                                            <th>Classes</th>
                                            <th>Status</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% schools.forEach(school=> { %>
                                            <tr>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div
                                                            class="avatar-sm bg-primary-light text-primary rounded me-2 d-flex align-items-center justify-content-center">
                                                            <%= school.name.charAt(0).toUpperCase() %>
                                                        </div>
                                                        <div>
                                                            <strong>
                                                                <%= school.name %>
                                                            </strong>
                                                            <% if (school.address) { %>
                                                                <div class="text-muted" style="font-size: 12px;">
                                                                    <%= school.address.substring(0, 30) %>
                                                                        <%= school.address.length> 30 ? '...' : '' %>
                                                                </div>
                                                                <% } %>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <%= school.studentCount || 0 %>
                                                </td>
                                                <td>
                                                    <%= school.teacherCount || 0 %>
                                                </td>
                                                <td>
                                                    <%= school.classCount || 0 %>
                                                </td>
                                                <td>
                                                    <% if (school.isActive !==false) { %>
                                                        <span class="badge bg-success">Active</span>
                                                        <% } else { %>
                                                            <span class="badge bg-secondary">Inactive</span>
                                                            <% } %>
                                                </td>
                                                <td>
                                                    <div class="action-buttons">
                                                        <a href="/admin/schools/<%= school._id %>"
                                                            class="btn btn-outline-primary btn-sm" title="View">
                                                            <i class="bi bi-eye"></i>
                                                        </a>
                                                        <a href="/admin/schools/<%= school._id %>/edit"
                                                            class="btn btn-outline-warning btn-sm" title="Edit">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                            <% } else { %>
                                <div class="empty-state">
                                    <i class="bi bi-building"></i>
                                    <h5>No Schools Yet</h5>
                                    <p>Get started by adding your first school to the system.</p>
                                    <a href="/admin/schools/new" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-1"></i>Add School
                                    </a>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>
    </div>

    <%- include('partials/footer') %>