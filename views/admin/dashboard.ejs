<%- include('partials/header') %>

<div class="main-content">
    <%- include('partials/topbar', { pageTitle: 'Dashboard Overview' }) %>
    
    <div class="content-wrapper">
        <!-- Welcome Section -->
        <div class="welcome-section mb-4">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <h1 class="welcome-title">Welcome back, <%= admin.username %>! ðŸ‘‹</h1>
                    <p class="welcome-subtitle">Here's what's happening across all your schools today.</p>
                </div>
                <div class="col-lg-4 text-lg-end">
                    <span class="badge bg-gradient-primary px-3 py-2">
                        <i class="bi bi-calendar3 me-2"></i>
                        <%= new Date().toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                    </span>
                </div>
            </div>
        </div>
        
        <!-- Stats Cards -->
        <div class="row g-4 mb-4">
            <div class="col-xl-3 col-md-6">
                <div class="card stat-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                                <i class="bi bi-building"></i>
                            </div>
                            <div class="ms-3">
                                <h3 class="mb-0"><%= stats.totalSchools %></h3>
                                <p class="text-muted mb-0">Total Schools</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-3 col-md-6">
                <div class="card stat-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-success bg-opacity-10 text-success">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="ms-3">
                                <h3 class="mb-0"><%= stats.totalStudents %></h3>
                                <p class="text-muted mb-0">Total Students</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-3 col-md-6">
                <div class="card stat-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-info bg-opacity-10 text-info">
                                <i class="bi bi-person-badge"></i>
                            </div>
                            <div class="ms-3">
                                <h3 class="mb-0"><%= stats.totalTeachers %></h3>
                                <p class="text-muted mb-0">Total Teachers</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-xl-3 col-md-6">
                <div class="card stat-card">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                                <i class="bi bi-book"></i>
                            </div>
                            <div class="ms-3">
                                <h3 class="mb-0"><%= stats.totalClasses %></h3>
                                <p class="text-muted mb-0">Total Classes</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Schools List -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Schools Overview</h5>
                <a href="/admin/schools/new" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle me-2"></i>Add New School
                </a>
            </div>
            <div class="card-body">
                <% if (schools && schools.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>School Name</th>
                                    <th>Code</th>
                                    <th>Students</th>
                                    <th>Teachers</th>
                                    <th>Classes</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% schools.forEach(school => { %>
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded me-2 d-flex align-items-center justify-content-center">
                                                    <%= school.name.charAt(0).toUpperCase() %>
                                                </div>
                                                <strong><%= school.name %></strong>
                                            </div>
                                        </td>
                                        <td><code><%= school.schoolCode %></code></td>
                                        <td><%= school.studentCount || 0 %></td>
                                        <td><%= school.teacherCount || 0 %></td>
                                        <td><%= school.classCount || 0 %></td>
                                        <td>
                                            <% if (school.isActive) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-danger">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/admin/schools/<%= school._id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a href="/admin/schools/<%= school._id %>/edit" class="btn btn-sm btn-outline-warning">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center py-5">
                        <i class="bi bi-building display-1 text-muted"></i>
                        <h4 class="mt-3">No Schools Yet</h4>
                        <p class="text-muted">Start by adding your first school to the system.</p>
                        <a href="/admin/schools/new" class="btn btn-primary">
                            <i class="bi bi-plus-circle me-2"></i>Add First School
                        </a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>
