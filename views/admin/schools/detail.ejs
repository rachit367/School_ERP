<%- include('../partials/header') %>

    <div class="main-content">
        <%- include('../partials/topbar', { pageTitle: school.name }) %>

            <div class="content-wrapper">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools">Schools</a></li>
                        <li class="breadcrumb-item active">
                            <%= school.name %>
                        </li>
                    </ol>
                </nav>

                <!-- Success/Error Messages -->
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>

                        <!-- School Header Card -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-lg-8">
                                        <div class="d-flex align-items-start">
                                            <% if (school.logo) { %>
                                                <img src="<%= school.logo %>" alt="<%= school.name %> logo"
                                                    class="rounded-circle me-4"
                                                    style="width: 80px; height: 80px; object-fit: cover;"
                                                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                                                <div class="avatar-lg bg-primary bg-opacity-10 text-primary rounded-circle me-4 d-flex align-items-center justify-content-center"
                                                    style="width: 80px; height: 80px; font-size: 2.5rem; font-weight: 700; display: none;">
                                                    <%= school.name.charAt(0).toUpperCase() %>
                                                </div>
                                                <% } else { %>
                                                    <div class="avatar-lg bg-primary bg-opacity-10 text-primary rounded-circle me-4 d-flex align-items-center justify-content-center"
                                                        style="width: 80px; height: 80px; font-size: 2.5rem; font-weight: 700;">
                                                        <%= school.name.charAt(0).toUpperCase() %>
                                                    </div>
                                                    <% } %>
                                                        <div>
                                                            <div class="d-flex align-items-center mb-2">
                                                                <h2 class="mb-0 me-3">
                                                                    <%= school.name %>
                                                                </h2>
                                                                <!-- Plan Badge -->
                                                                <% if (school.plan==='Automate' ) { %>
                                                                    <span class="badge bg-gradient"
                                                                        style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                                                                        <%= school.plan %>
                                                                    </span>
                                                                    <% } else if (school.plan==='Autonomy' ) { %>
                                                                        <span class="badge bg-warning text-dark">
                                                                            <%= school.plan %>
                                                                        </span>
                                                                        <% } else { %>
                                                                            <span class="badge bg-secondary">
                                                                                <%= school.plan || 'Assist' %>
                                                                            </span>
                                                                            <% } %>
                                                            </div>
                                                            <% if (school.address) { %>
                                                                <p class="text-muted mb-2">
                                                                    <i class="bi bi-geo-alt me-2"></i>
                                                                    <%= school.address %>
                                                                </p>
                                                                <% } %>
                                                                    <% if (school.principal_id) { %>
                                                                        <p class="mb-0">
                                                                            <strong><i
                                                                                    class="bi bi-person-badge me-2"></i>Principal:</strong>
                                                                            <%= school.principal_id.name %>
                                                                                <% if (school.principal_id.phone) { %>
                                                                                    <span class="text-muted">(<%=
                                                                                            school.principal_id.phone %>
                                                                                            )</span>
                                                                                    <% } %>
                                                                        </p>
                                                                        <% } else { %>
                                                                            <p class="mb-0 text-warning">
                                                                                <i
                                                                                    class="bi bi-exclamation-circle me-2"></i>No
                                                                                Principal Assigned
                                                                            </p>
                                                                            <% } %>
                                                        </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                                        <a href="/admin/schools/<%= school._id %>/edit" class="btn btn-warning me-2">
                                            <i class="bi bi-pencil me-2"></i>Edit School
                                        </a>
                                        <% if (school.principal_id) { %>
                                            <a href="/admin/schools/<%= school._id %>/principal/<%= school.principal_id._id %>/edit"
                                                class="btn btn-info">
                                                <i class="bi bi-person-gear me-2"></i>Edit Principal
                                            </a>
                                            <% } else { %>
                                                <a href="/admin/schools/<%= school._id %>/principal/new"
                                                    class="btn btn-success">
                                                    <i class="bi bi-person-plus me-2"></i>Add Principal
                                                </a>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row g-4 mb-4">
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card success">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 60px; height: 60px;">
                                                <i class="bi bi-people"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h3 class="mb-0 stat-value">
                                                    <%= school.total_students || 0 %>
                                                </h3>
                                                <p class="text-muted mb-0 stat-label">Total Students</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card info">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 60px; height: 60px;">
                                                <i class="bi bi-person-badge"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h3 class="mb-0 stat-value">
                                                    <%= school.total_teachers || 0 %>
                                                </h3>
                                                <p class="text-muted mb-0 stat-label">Total Teachers</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card warning">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 60px; height: 60px;">
                                                <i class="bi bi-book"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h3 class="mb-0 stat-value">
                                                    <%= classes ? classes.length : 0 %>
                                                </h3>
                                                <p class="text-muted mb-0 stat-label">Total Classes</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 60px; height: 60px;">
                                                <i class="bi bi-calendar-check"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h3 class="mb-0 stat-value">
                                                    <%= school.isActive !==false ? 'Active' : 'Inactive' %>
                                                </h3>
                                                <p class="text-muted mb-0 stat-label">Status</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Quick Actions -->
                        <div class="row g-4">
                            <!-- View Classes -->
                            <div class="col-xl-4 col-md-6">
                                <a href="/admin/schools/<%= school._id %>/classes"
                                    class="card quick-action-card text-decoration-none h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-book text-warning" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-dark">View Classes & Sections</h5>
                                        <p class="text-muted mb-0">Manage all classes and their sections</p>
                                        <div class="mt-3">
                                            <span class="badge bg-warning">
                                                <%= classes ? classes.length : 0 %> Classes
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- View Students -->
                            <div class="col-xl-4 col-md-6">
                                <a href="/admin/schools/<%= school._id %>/students"
                                    class="card quick-action-card text-decoration-none h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-people text-success" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-dark">View All Students</h5>
                                        <p class="text-muted mb-0">Manage student records and profiles</p>
                                        <div class="mt-3">
                                            <span class="badge bg-success">
                                                <%= school.total_students || 0 %> Students
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- View Teachers -->
                            <div class="col-xl-4 col-md-6">
                                <a href="/admin/schools/<%= school._id %>/teachers"
                                    class="card quick-action-card text-decoration-none h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-person-badge text-info" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-dark">View All Teachers</h5>
                                        <p class="text-muted mb-0">Manage teacher profiles and assignments</p>
                                        <div class="mt-3">
                                            <span class="badge bg-info">
                                                <%= school.total_teachers || 0 %> Teachers
                                            </span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- View Staff (Principal, Coordinators, Managers) -->
                            <div class="col-xl-4 col-md-6">
                                <a href="/admin/schools/<%= school._id %>/staff"
                                    class="card quick-action-card text-decoration-none h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-people-fill text-primary" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-dark">View School Staff</h5>
                                        <p class="text-muted mb-0">Manage Principal, Coordinators & Managers</p>
                                        <div class="mt-3">
                                            <span class="badge bg-primary">Staff Management</span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- Bulk Operations -->
                            <div class="col-xl-4 col-md-6">
                                <a href="/admin/schools/<%= school._id %>/bulk"
                                    class="card quick-action-card text-decoration-none h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-stack text-primary" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-dark">Bulk Operations</h5>
                                        <p class="text-muted mb-0">Bulk add/remove students and teachers</p>
                                        <div class="mt-3">
                                            <span class="badge bg-primary">Import/Export</span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- Promote Students -->
                            <div class="col-xl-4 col-md-6">
                                <a href="/admin/schools/<%= school._id %>/promote"
                                    class="card quick-action-card text-decoration-none h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-arrow-up-circle text-success" style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-dark">Promote Students</h5>
                                        <p class="text-muted mb-0">Promote students to next class/section</p>
                                        <div class="mt-3">
                                            <span class="badge bg-success">Promotion</span>
                                        </div>
                                    </div>
                                </a>
                            </div>

                            <!-- Delete School -->
                            <div class="col-xl-4 col-md-6">
                                <div class="card border-danger h-100">
                                    <div class="card-body text-center p-4">
                                        <div class="mb-3">
                                            <i class="bi bi-exclamation-triangle text-danger"
                                                style="font-size: 3rem;"></i>
                                        </div>
                                        <h5 class="mb-2 text-danger">Danger Zone</h5>
                                        <p class="text-muted mb-3">Delete this school and all its data</p>
                                        <form action="/admin/schools/<%= school._id %>/delete" method="POST"
                                            onsubmit="return confirm('WARNING: This will permanently delete <%= school.name %> and ALL associated data (students, teachers, classes, attendance, etc.). This action cannot be undone. Are you absolutely sure?');">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash me-2"></i>Delete School
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
            </div>
    </div>

    <%- include('../partials/footer') %>