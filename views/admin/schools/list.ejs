<%- include('../partials/header') %>

    <div class="main-content">
        <%- include('../partials/topbar', { pageTitle: 'All Schools' }) %>

            <div class="content-wrapper">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Schools</li>
                    </ol>
                </nav>

                <!-- Success/Error Messages -->
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>
                        <% if (typeof error !=='undefined' && error) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            <% } %>

                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-center mb-4">
                                    <div>
                                        <h2 class="mb-1"><i class="bi bi-building me-2 text-primary"></i>All Schools
                                        </h2>
                                        <p class="text-muted mb-0">Manage all schools in the system</p>
                                    </div>
                                    <a href="/admin/schools/new" class="btn btn-primary">
                                        <i class="bi bi-plus-circle me-2"></i>Add New School
                                    </a>
                                </div>

                                <!-- Schools Grid -->
                                <% if (schools && schools.length> 0) { %>
                                    <div class="row g-4">
                                        <% schools.forEach(school=> { %>
                                            <div class="col-xl-4 col-md-6">
                                                <div class="card school-card h-100">
                                                    <div class="card-body">
                                                        <div
                                                            class="d-flex justify-content-between align-items-start mb-3">
                                                            <div class="d-flex align-items-center">
                                                                <div class="avatar-sm bg-primary bg-opacity-10 text-primary rounded-circle me-3 d-flex align-items-center justify-content-center"
                                                                    style="width: 50px; height: 50px; font-size: 1.5rem; font-weight: 700;">
                                                                    <%= school.name.charAt(0).toUpperCase() %>
                                                                </div>
                                                                <div>
                                                                    <h5 class="card-title mb-1">
                                                                        <%= school.name %>
                                                                    </h5>
                                                                    <% if (school.principal_id) { %>
                                                                        <p class="text-muted mb-0"
                                                                            style="font-size: 0.85rem;">
                                                                            <i class="bi bi-person-badge me-1"></i>
                                                                            <%= school.principal_id.name %>
                                                                        </p>
                                                                        <% } else { %>
                                                                            <p class="text-warning mb-0"
                                                                                style="font-size: 0.85rem;">
                                                                                <i
                                                                                    class="bi bi-exclamation-circle me-1"></i>No
                                                                                Principal
                                                                            </p>
                                                                            <% } %>
                                                                </div>
                                                            </div>
                                                            <% if (school.isActive !==false) { %>
                                                                <span class="badge bg-success">Active</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-danger">Inactive</span>
                                                                    <% } %>
                                                        </div>

                                                        <div class="mb-3">
                                                            <% if (school.address) { %>
                                                                <p class="text-muted mb-1" style="font-size: 0.9rem;">
                                                                    <i class="bi bi-geo-alt me-2"></i>
                                                                    <%= school.address %>
                                                                </p>
                                                                <% } %>
                                                        </div>

                                                        <div class="row text-center mb-3">
                                                            <div class="col-4">
                                                                <div class="p-2 bg-success bg-opacity-10 rounded">
                                                                    <h4 class="mb-0 text-success">
                                                                        <%= school.total_students || 0 %>
                                                                    </h4>
                                                                    <small class="text-muted">Students</small>
                                                                </div>
                                                            </div>
                                                            <div class="col-4">
                                                                <div class="p-2 bg-info bg-opacity-10 rounded">
                                                                    <h4 class="mb-0 text-info">
                                                                        <%= school.total_teachers || 0 %>
                                                                    </h4>
                                                                    <small class="text-muted">Teachers</small>
                                                                </div>
                                                            </div>
                                                            <div class="col-4">
                                                                <div class="p-2 bg-warning bg-opacity-10 rounded">
                                                                    <h4 class="mb-0 text-warning">
                                                                        <%= school.classCount || 0 %>
                                                                    </h4>
                                                                    <small class="text-muted">Classes</small>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="d-flex gap-2">
                                                            <a href="/admin/schools/<%= school._id %>"
                                                                class="btn btn-sm btn-outline-primary flex-fill">
                                                                <i class="bi bi-eye me-1"></i>View Details
                                                            </a>
                                                            <a href="/admin/schools/<%= school._id %>/edit"
                                                                class="btn btn-sm btn-outline-warning">
                                                                <i class="bi bi-pencil"></i>
                                                            </a>
                                                            <form action="/admin/schools/<%= school._id %>/delete"
                                                                method="POST" class="d-inline"
                                                                onsubmit="return confirm('Are you sure you want to delete <%= school.name %>? This will delete all associated data!');">
                                                                <button type="submit"
                                                                    class="btn btn-sm btn-outline-danger">
                                                                    <i class="bi bi-trash"></i>
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <% }) %>
                                    </div>
                                    <% } else { %>
                                        <div class="card border-0 shadow-sm">
                                            <div class="card-body py-5">
                                                <div class="text-center">
                                                    <div class="mb-4">
                                                        <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center"
                                                            style="width: 120px; height: 120px;">
                                                            <i class="bi bi-building text-primary"
                                                                style="font-size: 3.5rem;"></i>
                                                        </div>
                                                    </div>
                                                    <h4 class="mb-2 text-dark">No Schools Yet</h4>
                                                    <p class="text-muted mb-4 mx-auto" style="max-width: 400px;">
                                                        Get started by adding your first school. You can manage
                                                        students, teachers, classes, and more once a school is created.
                                                    </p>
                                                    <a href="/admin/schools/new" class="btn btn-primary btn-lg px-4">
                                                        <i class="bi bi-plus-circle me-2"></i>Add Your First School
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <% } %>
            </div>
    </div>

    <%- include('../partials/footer') %>