<%- include('../partials/header', { currentPage: 'schools' }) %>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="/admin/schools">Schools</a></li>
        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>"><%= school.name %></a></li>
        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>/classes">Classes</a></li>
        <li class="breadcrumb-item active">Class <%= classData.class_name %>-<%= classData.section %></li>
    </ol>
</nav>

<% if (typeof success !== 'undefined' && success) { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i><%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
<% } %>

<!-- Class Info Card -->
<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-journal-text me-2"></i>Class <%= classData.class_name %>-<%= classData.section %></span>
        <div>
            <a href="/admin/schools/<%= school._id %>/classes/<%= classData._id %>/edit" class="btn btn-warning btn-sm">
                <i class="bi bi-pencil me-1"></i>Edit
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <p>
                    <strong><i class="bi bi-person-circle me-2"></i>Class Teacher:</strong>
                    <% if (classData.class_teacher) { %>
                        <%= classData.class_teacher.name %>
                        <% if (classData.class_teacher.phone) { %>
                            (<%= classData.class_teacher.phone %>)
                        <% } %>
                    <% } else { %>
                        <span class="text-warning">Not Assigned</span>
                    <% } %>
                </p>
                <p><strong><i class="bi bi-building me-2"></i>School:</strong> <%= school.name %></p>
            </div>
            <div class="col-md-6">
                <div class="text-center">
                    <div class="h2 text-success mb-0"><%= studentCount %></div>
                    <span class="text-muted">Total Students</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Students Roster -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <span><i class="bi bi-people me-2"></i>Student Roster (<%= studentCount %>)</span>
        <a href="/admin/schools/<%= school._id %>/students/new?class_id=<%= classData._id %>" class="btn btn-success btn-sm">
            <i class="bi bi-plus-lg me-1"></i>Add Student
        </a>
    </div>
    <div class="card-body">
        <% if (!classData.students || classData.students.length === 0) { %>
            <div class="text-center py-5">
                <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                <h5 class="mt-3 text-muted">No Students in this Class</h5>
                <p class="text-muted">Add students to this class</p>
                <a href="/admin/schools/<%= school._id %>/students/new" class="btn btn-success">
                    <i class="bi bi-plus-lg me-1"></i>Add Student
                </a>
            </div>
        <% } else { %>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Roll No</th>
                            <th>Name</th>
                            <th>Phone</th>
                            <th>Father's Name</th>
                            <th>Attendance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% classData.students.forEach((student, index) => { %>
                            <tr>
                                <td><%= index + 1 %></td>
                                <td><%= student.studentProfile?.roll_number || '-' %></td>
                                <td><%= student.name %></td>
                                <td><%= student.phone %></td>
                                <td><%= student.studentProfile?.father_name || '-' %></td>
                                <td>
                                    <span class="badge bg-success">P: <%= student.studentProfile?.total_presents || 0 %></span>
                                    <span class="badge bg-danger">A: <%= student.studentProfile?.total_absents || 0 %></span>
                                </td>
                                <td class="action-buttons">
                                    <a href="/admin/schools/<%= school._id %>/students/<%= student._id %>/edit" 
                                       class="btn btn-outline-warning btn-sm" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="/admin/schools/<%= school._id %>/students/<%= student._id %>/delete" method="POST" class="d-inline"
                                          onsubmit="return confirm('Are you sure you want to delete this student?')">
                                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Delete">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        <% } %>
    </div>
</div>

<%- include('../partials/footer') %>
