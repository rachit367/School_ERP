<%- include('../partials/header') %>

    <div class="main-content">
        <%- include('../partials/topbar', { pageTitle: teacher.name }) %>

            <div class="content-wrapper">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools">Schools</a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>">
                                <%= school.name %>
                            </a></li>
                        <li class="breadcrumb-item"><a href="/admin/schools/<%= school._id %>/teachers">Teachers</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <%= teacher.name %>
                        </li>
                    </ol>
                </nav>

                <!-- Success/Error Messages -->
                <% if (typeof success !=='undefined' && success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="bi bi-check-circle me-2"></i>
                        <%= success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                    <% } %>

                        <!-- Teacher Header -->
                        <div class="card mb-4">
                            <div class="card-body">
                                <div class="row align-items-center">
                                    <div class="col-lg-8">
                                        <div class="d-flex align-items-start">
                                            <div class="avatar-lg bg-info bg-opacity-10 text-info rounded-circle me-4 d-flex align-items-center justify-content-center"
                                                style="width: 80px; height: 80px; font-size: 2.5rem; font-weight: 700;">
                                                <%= teacher.name.charAt(0).toUpperCase() %>
                                            </div>
                                            <div>
                                                <h2 class="mb-2">
                                                    <%= teacher.name %>
                                                </h2>
                                                <p class="mb-1">
                                                    <i class="bi bi-phone me-2"></i>
                                                    <%= teacher.phone %>
                                                        <% if (teacher.email) { %>
                                                            <span class="ms-3"><i class="bi bi-envelope me-2"></i>
                                                                <%= teacher.email %>
                                                            </span>
                                                            <% } %>
                                                </p>
                                                <% if (teacher.teacherProfile && teacher.teacherProfile.employee_id) {
                                                    %>
                                                    <p class="mb-0 text-muted">
                                                        <i class="bi bi-person-badge me-2"></i>Employee ID:
                                                        <code><%= teacher.teacherProfile.employee_id %></code>
                                                    </p>
                                                    <% } %>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                                        <a href="/admin/schools/<%= school._id %>/teachers/<%= teacher._id %>/edit"
                                            class="btn btn-warning me-2">
                                            <i class="bi bi-pencil me-2"></i>Edit Teacher
                                        </a>
                                        <form
                                            action="/admin/schools/<%= school._id %>/teachers/<%= teacher._id %>/delete"
                                            method="POST" class="d-inline"
                                            onsubmit="return confirm('Are you sure you want to delete this teacher?')">
                                            <button type="submit" class="btn btn-danger">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Statistics Cards -->
                        <div class="row g-4 mb-4">
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card info">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-info bg-opacity-10 text-info rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-book"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= stats.classesAssigned %>
                                                </h4>
                                                <p class="text-muted mb-0">Classes Assigned</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card success">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-success bg-opacity-10 text-success rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-journal-text"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= stats.totalHomework %>
                                                </h4>
                                                <p class="text-muted mb-0">Homework (30 days)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card warning">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-warning bg-opacity-10 text-warning rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-megaphone"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <%= stats.totalAnnouncements %>
                                                </h4>
                                                <p class="text-muted mb-0">Announcements (30 days)</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-6">
                                <div class="card stat-card primary">
                                    <div class="card-body">
                                        <div class="d-flex align-items-center">
                                            <div class="stat-icon bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center"
                                                style="width: 50px; height: 50px;">
                                                <i class="bi bi-person-check"></i>
                                            </div>
                                            <div class="ms-3">
                                                <h4 class="mb-0">
                                                    <% if (teacher.teacherProfile &&
                                                        teacher.teacherProfile.class_teacher_of) { %>
                                                        <%= teacher.teacherProfile.class_teacher_of.class_name %>-<%=
                                                                teacher.teacherProfile.class_teacher_of.section %>
                                                                <% } else { %>
                                                                    N/A
                                                                    <% } %>
                                                </h4>
                                                <p class="text-muted mb-0">Class Teacher Of</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <!-- Teacher Profile Info -->
                            <div class="col-lg-4 mb-4">
                                <div class="card h-100">
                                    <div class="card-header">
                                        <i class="bi bi-info-circle me-2"></i>Profile Information
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item d-flex justify-content-between">
                                                <span class="text-muted">Designation</span>
                                                <strong>
                                                    <%= teacher.teacherProfile?.designation || 'N/A' %>
                                                </strong>
                                            </li>
                                            <li class="list-group-item d-flex justify-content-between">
                                                <span class="text-muted">Date of Birth</span>
                                                <strong>
                                                    <%= teacher.date_of_birth ? new
                                                        Date(teacher.date_of_birth).toLocaleDateString() : 'N/A' %>
                                                </strong>
                                            </li>
                                            <li class="list-group-item">
                                                <span class="text-muted d-block mb-2">Subjects</span>
                                                <% if (teacher.teacherProfile?.subjects &&
                                                    teacher.teacherProfile.subjects.length> 0) { %>
                                                    <% teacher.teacherProfile.subjects.forEach(subject=> { %>
                                                        <span class="badge bg-secondary me-1 mb-1">
                                                            <%= subject %>
                                                        </span>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <span class="text-muted">No subjects assigned</span>
                                                                <% } %>
                                            </li>
                                            <li class="list-group-item">
                                                <span class="text-muted d-block mb-2">Classes Assigned</span>
                                                <% if (teacher.teacherProfile?.classes_assigned &&
                                                    teacher.teacherProfile.classes_assigned.length> 0) { %>
                                                    <% teacher.teacherProfile.classes_assigned.forEach(cls=> { %>
                                                        <span class="badge bg-primary me-1 mb-1">
                                                            <%= cls.class_name %>-<%= cls.section %>
                                                        </span>
                                                        <% }) %>
                                                            <% } else { %>
                                                                <span class="text-muted">No classes assigned</span>
                                                                <% } %>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <!-- Recent Homework -->
                            <div class="col-lg-8 mb-4">
                                <div class="card h-100">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-journal-text me-2"></i>Recent Homework (Last 30
                                            Days)</span>
                                    </div>
                                    <div class="card-body">
                                        <% if (homework && homework.length> 0) { %>
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th>Topic</th>
                                                            <th>Class</th>
                                                            <th>Deadline</th>
                                                            <th>Submissions</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% homework.forEach(hw=> { %>
                                                            <tr>
                                                                <td>
                                                                    <%= hw.topic || 'Untitled' %>
                                                                </td>
                                                                <td>
                                                                    <% if (hw.class_id) { %>
                                                                        <span class="badge bg-primary">
                                                                            <%= hw.class_id.class_name %>-<%=
                                                                                    hw.class_id.section %>
                                                                        </span>
                                                                        <% } else { %>
                                                                            -
                                                                            <% } %>
                                                                </td>
                                                                <td>
                                                                    <%= hw.deadline ? new
                                                                        Date(hw.deadline).toLocaleDateString()
                                                                        : 'No deadline' %>
                                                                </td>
                                                                <td>
                                                                    <%= hw.submitted_by ? hw.submitted_by.length : 0 %>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <div class="text-center text-muted py-4">
                                                    <i class="bi bi-journal-x" style="font-size: 2rem;"></i>
                                                    <p class="mb-0 mt-2">No homework created in the last 30 days</p>
                                                </div>
                                                <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Announcements -->
                        <div class="card mb-4">
                            <div class="card-header">
                                <i class="bi bi-megaphone me-2"></i>Recent Announcements (Last 30 Days)
                            </div>
                            <div class="card-body">
                                <% if (announcements && announcements.length> 0) { %>
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Title</th>
                                                    <th>Classes</th>
                                                    <th>Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% announcements.forEach(ann=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= ann.title %>
                                                        </td>
                                                        <td>
                                                            <% if (ann.class_id && ann.class_id.length> 0) { %>
                                                                <% ann.class_id.forEach(cls=> { %>
                                                                    <span class="badge bg-info me-1">
                                                                        <%= cls.class_name %>-<%= cls.section %>
                                                                    </span>
                                                                    <% }) %>
                                                                        <% } else { %>
                                                                            <span class="badge bg-secondary">All
                                                                                Classes</span>
                                                                            <% } %>
                                                        </td>
                                                        <td>
                                                            <%= new Date(ann.createdAt).toLocaleDateString() %>
                                                        </td>
                                                    </tr>
                                                    <% }) %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <% } else { %>
                                        <div class="text-center text-muted py-4">
                                            <i class="bi bi-megaphone" style="font-size: 2rem;"></i>
                                            <p class="mb-0 mt-2">No announcements in the last 30 days</p>
                                        </div>
                                        <% } %>
                            </div>
                        </div>
            </div>
    </div>

    <%- include('../partials/footer') %>